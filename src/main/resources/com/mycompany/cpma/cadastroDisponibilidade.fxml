<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CadastroDisponibilidadeController">
    <children>
        <AnchorPane prefHeight="450.0" prefWidth="600.0" styleClass="main-container">
            <children>
                <!-- Container principal com card -->
                <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" prefHeight="390.0" prefWidth="500.0" styleClass="content-card">
                    <children>
                        <!-- Cabeçalho -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Text fill="#2563eb" strokeType="OUTSIDE" strokeWidth="0.0" text="CPMA" textAlignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Text>
                                <Text fill="#1e293b" strokeType="OUTSIDE" strokeWidth="0.0" text="Nova Disponibilidade" textAlignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI Bold" size="18.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                        
                        <!-- Formulário -->
                        <VBox spacing="20.0" prefWidth="450.0">
                            <children>
                                <!-- Dia da semana -->
                                <VBox spacing="8.0">
                                    <children>
                                        <Label text="Dia da Semana" styleClass="label-primary" />
                                        <TextField fx:id="campoDia" promptText="Ex: Segunda-feira" styleClass="input-field" />
                                    </children>
                                </VBox>
                                
                                <!-- Horários 1 -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Text fill="#1e293b" strokeType="OUTSIDE" strokeWidth="0.0" text="Período 1" textAlignment="CENTER">
                                            <font>
                                                <Font name="Segoe UI Bold" size="14.0" />
                                            </font>
                                        </Text>
                                        
                                        <GridPane hgap="15.0" vgap="15.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label text="Hora Início" styleClass="label-primary" />
                                                        <TextField fx:id="campoHoraInicio1" promptText="08:00" styleClass="input-field" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label text="Hora Fim" styleClass="label-primary" />
                                                        <TextField fx:id="campoHoraFim1" promptText="12:00" styleClass="input-field" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>
                                
                                <!-- Horários 2 (opcional) -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Text fill="#1e293b" strokeType="OUTSIDE" strokeWidth="0.0" text="Período 2 (Opcional)" textAlignment="CENTER">
                                            <font>
                                                <Font name="Segoe UI Bold" size="14.0" />
                                            </font>
                                        </Text>
                                        
                                        <GridPane hgap="15.0" vgap="15.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label text="Hora Início" styleClass="label-primary" />
                                                        <TextField fx:id="campoHoraInicio2" promptText="14:00" styleClass="input-field" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label text="Hora Fim" styleClass="label-primary" />
                                                        <TextField fx:id="campoHoraFim2" promptText="18:00" styleClass="input-field" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                        
                        <!-- Botões de ação -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="btnSalvar" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" styleClass="btn-primary" text="Salvar" />
                                <Button fx:id="btnCancelar" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" styleClass="btn-secondary" text="Cancelar" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
