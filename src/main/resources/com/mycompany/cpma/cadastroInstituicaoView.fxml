<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarInstituicaoController">
    <children>
        <AnchorPane prefHeight="700.0" prefWidth="900.0" styleClass="main-container">
            <children>
                <!-- Container principal com card -->
                <VBox alignment="CENTER" layoutX="50.0" layoutY="20.0" prefHeight="660.0" prefWidth="800.0" styleClass="content-card">
                    <children>
                        <!-- Cabeçalho -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Text fill="#2563eb" strokeType="OUTSIDE" strokeWidth="0.0" text="CPMA" textAlignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI Bold" size="32.0" />
                                    </font>
                                </Text>
                                <Text fill="#64748b" strokeType="OUTSIDE" strokeWidth="0.0" text="Central de Penas e Medidas Alternativas" textAlignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI" size="14.0" />
                                    </font>
                                </Text>
                                <Text fill="#1e293b" strokeType="OUTSIDE" strokeWidth="0.0" text="Cadastro de Instituição" textAlignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                        
                        <!-- Seção de informações básicas -->
                        <VBox spacing="20.0" prefWidth="750.0">
                            <children>
                                <Text fill="#1e293b" strokeType="OUTSIDE" strokeWidth="0.0" text="Informações Básicas" textAlignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI Bold" size="18.0" />
                                    </font>
                                </Text>
                                
                                <!-- Nome da instituição -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nome da Instituição" styleClass="label-primary" />
                                        <ComboBox fx:id="comboInstituicoes" promptText="Selecione uma instituição para editar" styleClass="combo-box" visible="false" />
                                        <TextField fx:id="nome" promptText="Digite o nome da instituição" styleClass="input-field" />
                                    </children>
                                </VBox>
                                
                                <!-- Endereço -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Endereço" styleClass="label-primary" />
                                        <TextField fx:id="endereco" promptText="Rua, número, complemento" styleClass="input-field" />
                                    </children>
                                </VBox>
                                
                                <!-- Cidade, UF e Bairro -->
                                <GridPane hgap="15.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="Cidade" styleClass="label-primary" />
                                                <TextField fx:id="cidade" promptText="Nome da cidade" styleClass="input-field" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="UF" styleClass="label-primary" />
                                                <TextField fx:id="uf" promptText="SP" styleClass="input-field" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="Bairro" styleClass="label-primary" />
                                                <TextField fx:id="bairro" promptText="Nome do bairro" styleClass="input-field" />
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>
                                
                                <!-- CEP e Tipo de Instituição -->
                                <GridPane hgap="15.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="CEP" styleClass="label-primary" />
                                                <TextField fx:id="cep" promptText="00000-000" styleClass="input-field" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="Tipo de Instituição" styleClass="label-primary" />
                                                <ComboBox fx:id="comboTipo" styleClass="combo-box" />
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>
                                
                                <!-- Responsável e Telefone -->
                                <GridPane hgap="15.0" vgap="15.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="Responsável" styleClass="label-primary" />
                                                <TextField fx:id="responsavel" promptText="Nome do responsável" styleClass="input-field" />
                                            </children>
                                        </VBox>
                                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="Telefone" styleClass="label-primary" />
                                                <TextField fx:id="telefone" promptText="(00) 00000-0000" styleClass="input-field" />
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>
                        
                        <!-- Seção de horários -->
                        <VBox spacing="15.0" prefWidth="750.0">
                            <children>
                                <Text fill="#1e293b" strokeType="OUTSIDE" strokeWidth="0.0" text="Horários de Funcionamento" textAlignment="CENTER">
                                    <font>
                                        <Font name="Segoe UI Bold" size="18.0" />
                                    </font>
                                </Text>
                                
                                <!-- Tabela de horários -->
                                <TableView fx:id="tabelaHorarios" prefHeight="120.0" styleClass="table-view">
                                    <columns>
                                        <TableColumn fx:id="colDia" text="Dia da Semana" prefWidth="150.0" />
                                        <TableColumn fx:id="colInicio1" text="Início 1" prefWidth="100.0" />
                                        <TableColumn fx:id="colInicio2" text="Início 2" prefWidth="100.0" />
                                        <TableColumn fx:id="colFim1" text="Fim 1" prefWidth="100.0" />
                                        <TableColumn fx:id="colFim2" text="Fim 2" prefWidth="100.0" />
                                        <TableColumn fx:id="colAcao" text="" prefWidth="50.0" />
                                    </columns>
                                </TableView>
                                
                                <!-- Botões de horário -->
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Button fx:id="btnAdicionarHorario" prefHeight="40.0" prefWidth="160.0" styleClass="btn-success" text="Adicionar Horário" />
                                        <Button fx:id="btnRemoverHorario" prefHeight="40.0" prefWidth="180.0" styleClass="btn-danger" text="Remover Selecionado" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        
                        <!-- Botões de ação -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="btnCadastrar" prefHeight="48.0" prefWidth="150.0" styleClass="btn-primary" text="Cadastrar" />
                                <Button fx:id="btnCancelar" prefHeight="48.0" prefWidth="150.0" styleClass="btn-secondary" text="Cancelar" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
