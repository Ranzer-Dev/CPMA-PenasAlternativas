<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="320.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CadastroDisponibilidadeController">
    <children>
        <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nova Disponibilidade">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Text>

        <Label layoutX="20.0" layoutY="60.0" text="Dia da semana"/>
        <TextField fx:id="campoDia" layoutX="20.0" layoutY="80.0" prefWidth="360.0"/>

        <Label layoutX="20.0" layoutY="110.0" text="Hora início 1"/>
        <TextField fx:id="campoHoraInicio1" layoutX="20.0" layoutY="130.0" prefWidth="150.0"/>

        <Label layoutX="230.0" layoutY="110.0" text="Hora fim 1"/>
        <TextField fx:id="campoHoraFim1" layoutX="230.0" layoutY="130.0" prefWidth="150.0"/>

        <Label layoutX="20.0" layoutY="160.0" text="Hora início 2 (opcional)"/>
        <TextField fx:id="campoHoraInicio2" layoutX="20.0" layoutY="180.0" prefWidth="150.0"/>

        <Label layoutX="230.0" layoutY="160.0" text="Hora fim 2 (opcional)"/>
        <TextField fx:id="campoHoraFim2" layoutX="230.0" layoutY="180.0" prefWidth="150.0"/>

        <Button fx:id="btnSalvar" layoutX="110.0" layoutY="240.0" text="Salvar" prefWidth="100.0"/>
        <Button fx:id="btnCancelar" layoutX="220.0" layoutY="240.0" text="Cancelar" prefWidth="100.0"/>
    </children>
</AnchorPane>
